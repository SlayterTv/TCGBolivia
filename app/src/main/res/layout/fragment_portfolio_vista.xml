<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.portfolio.PortfolioVistaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="33sp"
            android:text="nombre carta"
            android:id="@+id/portfolioviewname"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cardImagesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectedImageTextView"/>
        <com.google.android.material.divider.MaterialDivider
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/cardSetSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <TextView
            android:layout_gravity="center"
            android:text="nombre rareza carta"
            android:textSize="22sp"
            android:id="@+id/setNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:text="code carta"
            android:id="@+id/setCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:text="rarity carta"
            android:id="@+id/setRarityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:text="price carta"
            android:id="@+id/setPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/cardPrecioEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:hint="precio"/>
        <EditText
            android:id="@+id/cardCantidadEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:hint="cantidad"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="vender carta"
            android:id="@+id/savesellcard"/>



    </LinearLayout>
</androidx.core.widget.NestedScrollView>